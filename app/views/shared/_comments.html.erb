<% if (
  (
    %w[moment strategy].include?(local_assigns[:commentable].class.name.downcase) &&
    local_assigns[:commentable].comment &&
    (current_user.id == local_assigns[:commentable].user_id || @no_hide_page)
  ) ||
  (local_assigns[:commentable].class.name.downcase == 'meeting' && @meeting.member?(current_user))
) %>
<%= react_component('Comments', props: {
  comments: @comments,
  formProps: comments_form_props(
    local_assigns[:commentable],
    local_assigns[:commentable].class.name.downcase
  )
}) %>
<% end %>
